<Page x:Class="Dem6.MainPage.Hotel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dem6.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1800"
      Title="Hotel">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="650"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="4">
            <TextBlock Text="Отели" FontSize="52" Width="1550" Style="{StaticResource TextBlockMW}"/>
            <Border Style="{StaticResource BorderMW2}">
                <Button Content="Назад" x:Name="Back" Style="{StaticResource BtnMW}"/>
            </Border>
        </StackPanel>

        <DataGrid x:Name="Hotels">
            <DataGrid.Columns>
                <DataGridTextColumn></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Page>
